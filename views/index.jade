extends layout

block content
  ul(id='projects')
    for project in projects
      li(class="project " + (project.body.length > 300 ? 'project-large' : 'project-small'))
        h1.project-title
          a(href="/projects/" + project._id)= project.title
        p.project-footer
          | Submitted by #{project.submitter} on #{project.date} 