#brand.container-fluid
  span.state
    if user
      span.desktop Logged in as 
      code= user.id
      span.desktop .
      |   
      a.btn.btn-danger.btn-mini(href="/logout") Logout
        span.antidesktop  of #{title}
    else
      a.btn.btn-success.btn-mini(href="/authenticate") Login to #{title}

  a#name(href="/")
    img(src="/images/olinlogo.png", height=18, width=38)
    | Olin
    span(style="color: #F90") Projects
    | .com

  ul#olinstar
    if self != 'projects'
      li
        a Olin
          span(style="color: #F90") Projects
          | .com
    if self != 'students'
      li
        a(href="http://olinstudents.com/") Olin
          span(style="color: #3AC") Students
          | .com
    if self != 'clubs'
      li
        a(href="http://olinclubs.com/") Olin
          span(style="color: #3Ca") Clubs
          | .com
    if self != 'apps'
      li
        a(href="http://olinapps.com/") Olin
          span(style="color: #C26") Apps
          | .com
    li
      a(href="http://olin.edu/") Olin
        span(style="color: #CC0") .edu